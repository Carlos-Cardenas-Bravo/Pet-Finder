<section class="section">
  <div class="container">
    <h2 class="title is-3">Registrarse</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'box' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <!-- Contraseña -->
      <div class="field">
        <%= f.label :password, "Contraseña", class: "label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %>
        <div class="control">
          <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
        </div>
      </div>

      <!-- Confirmación de contraseña -->
      <div class="field">
        <%= f.label :password_confirmation, "Confirma tu contraseña", class: "label" %>
        <div class="control">
          <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
        </div>
      </div>

      <!-- Nombre -->
      <div class="field">
        <%= f.label :nombre, "Nombre", class: "label" %>
        <div class="control">
          <%= f.text_field :nombre, class: "input" %>
        </div>
      </div>

      <!-- Teléfono -->
      <div class="field">
        <%= f.label :phone, "Teléfono", class: "label" %>
        <div class="control">
          <%= f.text_field :phone, class: "input" %>
        </div>
      </div>

      <!-- Imagen de perfil (opcional) -->
      <div class="field">
        <%= f.label :profile_image, "Sube tu imagen de perfil (opcional)", class: "label" %>
        <div class="control">
          <div class="file has-name is-fullwidth">
            <label class="file-label">
              <%= f.file_field :profile_image, class: "file-input", onchange: "document.getElementById('file-name').textContent = this.files[0].name" %>
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Escoge un archivo…
                </span>
              </span>
              <span id="file-name" class="file-name">
                Ningún archivo seleccionado
              </span>
            </label>
          </div>
        </div>
      </div>

      <!-- Botón de registro -->
      <div class="field is-grouped">
        <div class="control">
          <%= f.submit "Registrarse", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
