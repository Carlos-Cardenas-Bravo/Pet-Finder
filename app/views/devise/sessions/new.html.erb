<section class="section">
  <div class="container">
    <div class="box">
      <h2 class="title is-3">Ingresar</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :contraseña, class: "label" %>
          <div class="control">
            <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <label class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :recuérdame, class: "label", style: "display: inline;" %>
              </label>
            </div>
          </div>
        <% end %>

        <div class="field is-grouped">
          <div class="control">
            <%= f.submit "Ingresar", class: "button is-primary" %>
          </div>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "button is-text" %>
      </div>
    </div>
  </div>
</section>

