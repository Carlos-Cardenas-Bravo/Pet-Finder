<% content_for :title, "Mascotas" %>

<section class="section">
  <div class="container">

    <!-- Título principal -->
    <h1 class="title is-3 has-text-centered">Mascotas</h1>

    <!-- Listado de Mascotas -->
    <div id="pets">
      <% @pets.each do |pet| %>
        <div class="box mb-4">
          <%= render pet %>
          <div class="buttons mt-3">
            <%= link_to "Ver detalles", pet, class: "button is-link" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Botón para agregar nueva mascota (solo si el usuario está autenticado) -->
    <% if user_signed_in? %>
      <div class="buttons is-centered mt-5">
        <%= link_to "Nueva Mascota", new_pet_path, class: "button is-primary" %>
      </div>
    <% end %>

    <!-- Paginación -->
    <%== pagy_bulma_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</section>

