<div id="<%= dom_id pet %>" class="card mb-5">
  <header class="card-header">
    <p class="card-header-title">
      Información de la Mascota
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <p>
        <strong>Nombre:</strong>
        <span class="has-text-weight-bold"><%= pet.name %></span>
      </p>

      <% if pet.photos.attached? %>
        <% pet.photos.each do |photo| %>
          <%= image_tag photo.variant(resize_to_limit: [300, 300]), alt: "Foto de la mascota" %>
        <% end %>
      <% else %>
        <%= image_tag "default_pet.png", alt: "Foto por defecto" %>
      <% end %>

      <p>
        <strong>Apodo:</strong>
        <span class="has-text-weight-bold"><%= pet.nickname %></span>
      </p>

      <p>
        <strong>¿Es apodo?:</strong>
        <span class="has-text-weight-bold"><%= pet.is_nickname ? "Sí" : "No" %></span>
      </p>

      <p>
        <strong>Tipo de mascota:</strong>
        <span class="has-text-weight-bold"><%= pet.pet_type.name %></span>
      </p>

      <p>
        <strong>Descripción:</strong>
        <span><%= pet.description %></span>
      </p>

      <p>
        <strong>Fecha encontrada:</strong>
        <span class="has-text-weight-bold"><%= l(pet.found_on, format: :long) %></span>
      </p>

      <p>
        <strong>Ciudad:</strong>
        <span class="has-text-weight-bold"><%= pet.city.name %></span>
      </p>

      <p>
        <strong>Cualidades:</strong>
        <span><%= pet.qualities.map(&:name).join(", ") %></span>
      </p>

      <p>
        <strong>Nombre de contacto:</strong>
        <span class="has-text-weight-bold"><%= pet.user.nombre.presence || "No especificado" %></span>
      </p>

      <p>
        <strong>Email de contacto:</strong>
        <span class="has-text-weight-bold"><%= mail_to pet.user.email %></span>
      </p>

      <p>
        <strong>Teléfono de contacto:</strong>
        <span class="has-text-weight-bold"><%= pet.user.phone.presence || "No especificado" %></span>
      </p>
    </div>
  </div>
</div>
