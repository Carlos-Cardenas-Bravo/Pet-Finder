<section class="section">
  <div class="container">
    <!-- Mostrar los detalles de la mascota -->
    <div class="box">
      <%= render @pet %>
    </div>
    <!-- Opciones de navegación y acciones -->
    <div class="buttons is-centered mt-4">
      <% if current_user.present? %>
        <% if current_user.admin? %>
          <%= link_to "Editar esta Mascota", edit_pet_path(@pet), class: "button is-warning" %>
          <%= button_to "Eliminar esta Mascota", @pet, method: :delete, remote: true, data: { confirm: "¿Estás seguro?" }, class: "button is-danger" %>
        <% elsif @pet.user == current_user %>
          <%= link_to "Editar esta Mascota", edit_pet_path(@pet), class: "button is-warning" %>
        <% end %>
      <% end %>
      <%= link_to "Volver al Listado", pets_path, class: "button is-light" %>
    </div>
  </div>
</section>


